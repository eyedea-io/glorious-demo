@import '_variables'
@import '_mixins'

$application-action-size = 8px
$application-box-shadow-intensity = 12px 18px 48px 0
$application-box-shadow-color = alpha($color-darkest, .6)

.editor-application .application,
.terminal-application .application
  background-color $color-darkest
  color alpha($color-lightest, .5)

.application
  font-family 'Helvetica', 'Arial', sans-serif
  box-shadow 0px 8px 8px rgba(0, 0, 0, 0.2)
  overflow hidden
  border-radius(16px)
  transition(all, $animation-duration)

.application-topbar
  position relative
  padding: 10px 20px;
  clearfix()
  box-sizing(border-box)

.application-actions-container
  position absolute
  top 50%
  transform('translateY(-50%)')

.application-actions-container,
.application-action
  float left

.application-action
  width $application-action-size
  height $application-action-size
  border-radius(50%)
  &.application-action-close
    background-color $color-red
  &.application-action-minimize
    background-color $color-yellow
  &.application-action-maximize
    background-color $color-green
  & + .application-action
    margin-left 6px

.application-title-container
  padding-left 55px
  font-size $font-size-xxs
  text-align center
  line-height 24px
  white-space nowrap
  letter-spacing .5px

.application-content-container
  overflow auto

.application-line
  position relative
  padding 0 20px
  min-height $font-size-xl
  font-size $font-size-xs
  line-height $font-size-xl
  font-family monospace
  clearfix()
